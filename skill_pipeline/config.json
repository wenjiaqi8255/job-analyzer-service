{
  "// 配置说明": "JobbAI 端到端技能处理管线配置文件 - 改进版",
  
  "// 模型配置": "用于语义相似度计算的SentenceTransformer模型",
  "model_name": "MohammedDhiyaEddine/job-skill-sentence-transformer-tsdae",
  "backup_model": "all-mpnet-base-v2",
  
  "// 分级阈值配置": "多层次置信度阈值，解决分类过度集中问题",
  "high_confidence_threshold": 0.75,
  "medium_confidence_threshold": 0.55,
  "low_confidence_threshold": 0.35,
  
  "// 兼容性配置": "保持向后兼容的角色和行业阈值",
  "role_threshold": 0.55,
  "industry_threshold": 0.45,
  
  "// 基线生成配置": "语义基线构建参数 - 分离存储",
  "min_skills_for_baseline": 5,
  "embedding_dimension": 384,
  "classification_model": "MohammedDhiyaEddine/job-skill-sentence-transformer-tsdae",
  "vector_model": "all-MiniLM-L6-v2",
  
  "// 数据库存储策略": "分离语义数据和向量数据存储",
  "database_storage": {
    "semantic_table": "semantic_baselines",
    "vector_table": "baseline_vectors", 
    "separate_storage": true,
    "vector_model_for_storage": "all-MiniLM-L6-v2",
    "classification_model_for_processing": "MohammedDhiyaEddine/job-skill-sentence-transformer-tsdae"
  },
  "// 数据库连接配置": "Supabase数据库连接信息（也可以通过环境变量设置）",
  "supabase_url": null,
  
  "supabase_key": null,
  "output_dir": "output",
  "backup_existing": true,
  
  "// 调试和监控配置": "帮助诊断分类问题",
  "enable_debug_logging": false,
  "save_classification_details": true,
  
  "// 显式技能映射": "确保核心技能正确分类的规则",
  "explicit_mappings": {
    "description": "这些映射确保关键技能被正确分类，避免语义匹配的不确定性",
    "ui_ux_designer_tools": ["figma", "sketch", "adobe_xd", "adobe_photoshop"],
    "marketing_tools": ["google_ads", "facebook_ads", "google_analytics"],
    "project_management_tools": ["jira", "agile", "scrum", "kanban"],
    "data_science_tools": ["python", "r", "pandas", "jupyter", "tableau"]
  },
  
  "// 排除规则": "防止不合理的技能分配",
  "exclusion_rules": {
    "description": "防止编程技能分配给非技术角色等不合理情况",
    "ui_ux_designer": {
      "exclude_programming": true,
      "exclude_backend": true
    },
    "digital_marketing_specialist": {
      "exclude_programming": true,
      "exclude_infrastructure": true
    }
  },
  
  "// 高级语义配置": "精细调整语义匹配",
  "semantic_tuning": {
    "reduce_role_overlap": true,
    "bonus_reduction_factor": 0.5,
    "strict_category_thresholds": true
  },
  
  "// 质量控制": "数据质量和验证规则",
  "quality_control": {
    "max_skills_per_role_percent": 30,
    "min_industry_coverage_percent": 50,
    "detect_classification_anomalies": true,
    "validate_core_skill_assignments": true,
    "min_skill_length": 2,
    "max_skill_length": 100,
    "forbidden_patterns": ["test", "example", "placeholder"],
    "required_skill_types": ["programming_language", "framework", "tool"]
  },
  
  "// 分类策略": "分级处理的策略配置",
  "classification_strategy": {
    "phase_1_explicit": {
      "description": "第一轮：显式规则分配",
      "priority": "highest",
      "coverage_target": "core_skills"
    },
    "phase_2_high_confidence": {
      "description": "第二轮：高置信度语义匹配",
      "threshold": 0.75,
      "apply_exclusion_rules": true
    },
    "phase_3_medium_confidence": {
      "description": "第三轮：中等置信度语义匹配", 
      "threshold": 0.55,
      "apply_exclusion_rules": true
    },
    "phase_4_fallback": {
      "description": "第四轮：兜底处理",
      "threshold": 0.35,
      "default_industry": "tech"
    }
  },
  
  "// 性能优化": "计算和内存优化选项",
  "performance": {
    "use_gpu": false,
    "batch_embedding": true,
    "cache_embeddings": true,
    "parallel_processing": false,
    "memory_limit_gb": 8
  },
  
  "// 输出格式": "控制输出文件的详细程度",
  "output_format": {
    "include_confidence_scores": false,
    "include_classification_reasoning": false,
    "generate_summary_report": true,
    "save_intermediate_results": false
  },
  
  "// 高级配置": "专家用户可调整的参数",
  "advanced": {
    "batch_size": 32,
    "max_sequence_length": 512,
    "similarity_metric": "cosine",
    "normalization": true
  },
  
  "// 自定义分类规则": "角色和行业的额外语义描述",
  "custom_semantics": {
    "additional_roles": {
      "custom_role_name": "custom role semantic description"
    },
    "additional_industries": {
      "custom_industry_name": "custom industry semantic description"
    }
  },
  
  "// 技能类型增强": "特定技能类型的描述模板",
  "skill_enhancements": {
    "programming_language": "{skill} programming language software development coding implementation",
    "framework": "{skill} framework web development software engineering architecture",
    "database": "{skill} database management data storage query optimization performance",
    "cloud_service": "{skill} cloud computing infrastructure deployment scalability automation",
    "tool": "{skill} tool software productivity development workflow",
    "methodology": "{skill} methodology approach process management best practices",
    "certification": "{skill} certification professional qualification expertise validation",
    "language": "{skill} language communication international business global",
    "domain_knowledge": "{skill} domain expertise industry knowledge business understanding"
  },
  
  "// 角色技能类型亲和性": "角色对特定技能类型的偏好权重",
  "role_skill_affinity": {
    "software_engineer": {
      "programming_language": 1.3,
      "framework": 1.2,
      "database": 1.1,
      "tool": 1.0
    },
    "data_scientist": {
      "programming_language": 1.2,
      "tool": 1.3,
      "domain_knowledge": 1.1
    },
    "devops_engineer": {
      "cloud_service": 1.4,
      "tool": 1.2,
      "programming_language": 1.1
    },
    "ui_ux_designer": {
      "tool": 1.4,
      "methodology": 1.2
    },
    "project_manager": {
      "methodology": 1.3,
      "certification": 1.1,
      "tool": 1.0
    }
  },
  
  "// 日志和监控": "日志级别和性能监控",
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(levelname)s - %(message)s",
    "file_output": false,
    "log_file": "pipeline.log"
  }
}